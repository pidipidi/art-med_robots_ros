<launch>

  <arg name="name" default="robot"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find art_med_robots_gazebo)/worlds/$(arg name).world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find art_med_robots_description)/urdf/pioneer-lx-jaco2.urdf.xacro'" />

  <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
  <!-- For the 6DOF -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-urdf -model $(arg name) -param robot_description
	    -z -0.02
        -J left_joint_2 3.14
        -J left_joint_3 3.14
        -J left_joint_finger_1 0.0
        -J left_joint_finger_2 0.0
        -J left_joint_finger_3 0.0
        -J left_joint_finger_tip_1 0.0
        -J left_joint_finger_tip_2 0.0
        -J left_joint_finger_tip_3 0.0
        -J right_joint_2 3.14
        -J right_joint_3 3.14
        -J right_joint_finger_1 0.0
        -J right_joint_finger_2 0.0
        -J right_joint_finger_3 0.0
        -J right_joint_finger_tip_1 0.0
        -J right_joint_finger_tip_2 0.0
        -J right_joint_finger_tip_3 0.0
        " />

  <include file="$(find art_med_robots_control)/launch/$(arg name)_control.launch">
    <arg name="name" value="$(arg name)"/>
  </include>

  <node pkg="tf" type="static_transform_publisher" name="world_frame_trans" args="0 0 0 0 0 0 base_link world 100"/>
  
</launch>

